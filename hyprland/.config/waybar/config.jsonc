// -*- mode: jsonc -*-
{
    "height": 30, // Waybar height (to be removed for auto height)
    "spacing": 4, // Gaps between modules (4px)
    // WIP:
    // "start_hidden": true,
    // Choose the order :of the modules
    "reload_style_on_change": true,
    "modules-left": [
        "hyprland/workspaces",
        "hyprland/submap"
    ],
    "modules-center": [
        "hyprland/window"
    ],
    "modules-right": [
        "idle_inhibitor",
        "privacy",
        "wireplumber",
        "temperature",
        "bluetooth",
        "network",
        "battery",
        "clock",
        "tray"
    ],
    "hyprland/workspaces": {
        "all-outputs": true,
        "show-special": true
    },
    "hyprland/submap": {
        /* WIP: I don't understand submaps yet */
        "format": "üòÜ {}",
        "max-length": 8,
        "tooltip": true
    },
    "hyprland/window": {
        /* WIP: Since there is no real minimize, I am nor sure I want this */
        "separate-outputs": true
    },
    "wireplumber": {
        "format": "{icon} {volume}%",
        "format-muted": "ÔÄ¶",
        "on-click": "helvum",
        "on-click-right": "pavucontrol",
        "on-click-middle": "wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle",
        "format-icons": [
            "ÔÄ¶",
            "ÔÄß",
            "ÔÄ®"
        ]
    },
    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "Û∞Ö∂",
            "deactivated": "Û∞æ™"
        }
    },
    "tray": {
        "spacing": 10
    },
    "clock": {
        "format": "{:%R}",
        "format-alt": "{:%A, %Y.%m.%d, %R}",
        "tooltip-format": "<tt><small>{calendar}</small></tt>",
        "actions": {
            "on-click-right": "mode",
            "on-scroll-up": "shift_up",
            "on-scroll-down": "shift_down"
        }
    },
    "temperature": {
        "critical-threshold": 80,
        "format-critical": "Ôãá {temperatureC}¬∞C",
        "format": "Ôãá {temperatureC}¬∞C"
    },
    "battery": {
        "states": {
            "good": 95,
            "warning": 30,
            "critical": 20
        },
        "format": "{icon}",
        "format-icons": [
            "Û∞Åª",
            "Û∞Åæ",
            "Û∞Åø",
            "Û∞ÇÇ",
            "Û∞Åπ"
        ],
        "format-charging": "Ôá¶ {capacity}%",
        "format-plugged": "Ôá¶ {capacity}%",
        "format-alt": "{icon} {capacity}%"
    },
    "network": {
        "format-wifi": "Ôá´",
        "format-ethernet": "Û∞àÄ",
        "tooltip-format": "{ifname} via {gwaddr}",
        "format-linked": "{ifname} (No IP)",
        "format-disconnected": "Û∞§≠",
        "format-alt": "Ôá´  {essid} ({signalStrength}%)"
    },
    "bluetooth": {
        "format": "Û∞ÇØ {status}",
        /* maybe setup a script to connect or disconnect bluetooth */
        "format-disabled": "Û∞Ç≤",
        "format-off": "Û∞Ç≤",
        "format-connected": "Û∞ÇØ {num_connections}",
        "tooltip-format": "{controller_alias}\t{controller_address}",
        "tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{device_enumerate}",
        "tooltip-format-enumerate-connected": "{device_alias}\t{device_address}"
    },
    "privacy": {
        "icon-spacing": 4,
        "icon-size": 18,
        "transition-duration": 250,
        "modules": [
            {
                "type": "screenshare",
                "tooltip": true,
                "tooltip-icon-size": 24
            },
            {
                "type": "audio-out",
                "tooltip": true,
                "tooltip-icon-size": 24
            },
            {
                "type": "audio-in",
                "tooltip": true,
                "tooltip-icon-size": 24
            }
        ]
    }
}
